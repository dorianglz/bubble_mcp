{
  "name": "bubble-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for interacting with Bubble.io applications",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "mcp": "tsx src/mcp-server.ts",
    "mcp:build": "npm run build && node dist/mcp-server.js",
    "api": "tsx src/rest-api/index.ts",
    "api:build": "npm run build && node dist/rest-api/index.js"
  },
  "bin": {
    "bubble-mcp": "./dist/mcp-server.js"
  },
  "keywords": [
    "mcp",
    "bubble",
    "bubble.io",
    "api",
    "claude",
    "ai"
  ],
  "author": "Community Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nocoderoi/bubble_mcp.git"
  },
  "bugs": {
    "url": "https://github.com/nocoderoi/bubble_mcp/issues"
  },
  "homepage": "https://github.com/nocoderoi/bubble_mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.14.9",
    "tsx": "^4.15.7",
    "typescript": "^5.5.3"
  }
}
